<?xml version="1.0" encoding="UTF-8"?>
<odoo>

<record id="res_config_settings_l10n_ec_edi_view_form" model="ir.ui.view">
    <field name="model">res.config.settings</field>
    <field name="inherit_id" ref="base.res_config_settings_view_form" />
    <field name="arch" type="xml">
      <xpath expr="//div[hasclass('settings')]" position="inside">
          <div class="app_settings_block" string="Veronica" data-string="Veronica" data-key="veronica" groups="account.group_account_manager">
              <h2>Veronica</h2>
              <div class="row mt16 o_settings_container" name="veronica_settings_container" groups="account.group_account_manager">
                  <div class="col-12 col-lg-16 o_setting_box"></div>
                  <div class="o_setting_left_pane"></div>
                  <div class="o_setting_right_pane">
                      <span class="o_form_label">Veronica Transactions</span>
                      <div class="text-muted">Manage Veronica transactions settings</div>
                      <div id="veronica_settings" class="col-12 col-lg-6 o_setting_box">
                          <div class="o_setting_left_pane">
                              <field name="veronica_sri" widget="upgrade_boolean"/>
                          </div>
                          <div class="o_setting_right_pane" name="veronica_transactions_settins">
                              <label for="veronica_sri" string="Veronica One Step"></label>
                          </div>
                      </div>
                  </div>
              </div>
          </div>
      </xpath>
    </field>
</record>
</odoo>
